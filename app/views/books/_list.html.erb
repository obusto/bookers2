<div class = "col-md-3">
  <h2>User info</h2>

  <% users.each do |user| %>
    <%= attachment_image_tag user, :profile_image_id %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
  <% end %>

  <div class="row">
    <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_40237" href="/users/40237/edit"></a>
  </div>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: book, url: books_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, id: 'book_title', class: 'form-control book_title' %>
    </div>

    <div class="form-group">
      <%= f.label 'book_opinion', 'opinion' %>
      <%= f.text_area :body, class: 'form-control book_body', id: 'book_body' %>
    </div>

    <div class="form-group">
      <%= f.submit "Create Book", class: 'btn btn-success' %>
    </div>

  <% end %>
</div>