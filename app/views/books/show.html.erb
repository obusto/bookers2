<div class="container">
  <div class="row">
    
    <%= render 'books/list', user: @user, book: @book_new %>
    
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg" %></br><%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>