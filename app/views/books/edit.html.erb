<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

  		<%= form_with model: @book, url: book_path, local: true do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control book_title', id: 'book_title' %>
        </div>

        <div class="form-group">
          <%= f.label 'opinion' %>
          <%= f.text_area :body, class: 'form-control book_body', id: 'book_body' %>
        </div>

        <div class="form-group">
          <%= f.submit "Update Book", class: 'btn btn-success' %>
        </div>

      <% end %>

      <%= link_to book_path(@book.id), class: "book_#{@book.id}" do %>
        Show
      <% end %>
      |
      <%= link_to books_path, class: "back" do %>
        Back
      <% end %>

    </div>
  </div>
</div>